<form action="/save_student" method="post">
    <input type="text" name="student_name" placeholder="Enter Student Name" required><br><br>
    <input type="text" name="student_mobile" placeholder="Enter Student Mobile" required><br><br>
    <input type="text" name="student_email" placeholder="Enter Student Email" required><br><br>
    <button type="submit">Save Data</button>
</form>


<h1>Student Table</h1>

<table border="2">
    <tr>
        <th>Action</th>
        <th>Serial No</th>
        <th>Name</th>
        <th>Mobile</th>
        <th>Email</th>
    </tr>

    <% for (var i = 0; i < list.length; i++) { %>
    <tr>
        <td>
            <a href="/delete_student/<%= list[i].student_id %>" onclick="return confirm('Are you sure?');">
                <button>Delete</button>
            </a>
        </td>
        <td><%= i + 1 %></td>
        <td><%= list[i].student_name %></td>
        <td><%= list[i].student_mobile %></td>
        <td><%= list[i].student_email %></td>
    </tr>
    <% } %>

    <% if (list.length == 0) { %>
    <tr>
        <td colspan="5" style="text-align: center;">
            <br>
                NO RECORD FOUND
            <br>
            <br>
        </td>
    </tr>
    <% } %>
</table>